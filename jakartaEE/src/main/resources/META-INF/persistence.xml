<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="scheduler">

    <jta-data-source>java:global/postgres</jta-data-source>

    <class>com.example.jakartaee.domain.Company</class>
    <class>com.example.jakartaee.domain.Employer</class>
    <class>com.example.jakartaee.domain.Order</class>
    <class>com.example.jakartaee.domain.Service</class>
    <class>com.example.jakartaee.domain.Status</class>
    <class>com.example.jakartaee.domain.User</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <properties>
      <!-- Configuring The Database Connection Details -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/scheduler"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="root"/>
      <!-- Configuring The Database Connection Details -->
      <property name="jakarta.persistence.schema-generation.database.action" value="create" />
      <property name="eclipselink.cache.shared.default" value="false" />

      <!-- Configuring The JPA hibernate -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect"/>
    </properties>
  </persistence-unit>
</persistence>
